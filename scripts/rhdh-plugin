#!/usr/bin/env python3
"""Thin wrapper to run rhdh_plugin CLI.

This script allows running the CLI directly without python -m:
    ./scripts/rhdh-plugin status
    ./scripts/rhdh-plugin doctor
"""

import sys
from pathlib import Path

# Add the package directory to the path
package_dir = Path(__file__).parent.parent
sys.path.insert(0, str(package_dir))

from rhdh_plugin.cli import main  # noqa: E402

if __name__ == "__main__":
    sys.exit(main())
