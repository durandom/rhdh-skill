#!/usr/bin/env python3
"""Thin wrapper to run rhdh CLI.

This script allows running the CLI directly without python -m:
    ./scripts/rhdh status
    ./scripts/rhdh doctor
"""

import sys
from pathlib import Path

# Add the skill directory to the path (where rhdh package lives)
skill_dir = Path(__file__).parent.parent
sys.path.insert(0, str(skill_dir))

from rhdh.cli import main  # noqa: E402

if __name__ == "__main__":
    sys.exit(main())
